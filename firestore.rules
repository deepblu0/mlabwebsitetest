rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // YARDIMCI FONSİYONLAR
    
    // Kullanıcının oturum açıp açmadığını kontrol et
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Kullanıcının e-posta adresini doğrula
    function isEmailVerified() {
      return request.auth.token.email_verified == true;
    }

    // Kullanıcının admin olup olmadığını kontrol et (E-posta listesi ile)
    // NOT: Bu liste firebase-config.js ile AYNIDIR.
    function isAdmin() {
      return isSignedIn() && (
        request.auth.token.email == 'berkay.yilmaz.edu@gmail.com'
      );
    }
    
    // Kullanıcının kendi verisine erişip erişmediğini kontrol et
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // --- KOLEKSİYON KURALLARI ---

    // USERS (Kullanıcılar)
    match /users/{userId} {
      // Okuma: Adminler herkesi okuyabilir, kullanıcılar sadece kendilerini
      allow read: if isAdmin() || isOwner(userId);
      
      // Yazma: Adminler herkesi düzenleyebilir, kullanıcılar sadece kendilerini
      allow create: if isSignedIn();
      allow update, delete: if isAdmin() || isOwner(userId);
    }
    
    // MENTOR/EXPERT APPLICATIONS (Uzman Başvuruları)
    // Koleksiyon adı: mentor_applications (portal-dashboard.html'den yazılır)
    match /mentor_applications/{applicationId} {
      allow read: if isAdmin();
      allow create: if true;
      allow update, delete: if isAdmin();
    }

    // Eski isim ile de erişime izin ver (geriye uyumluluk)
    match /expert_applications/{applicationId} {
      allow read: if isAdmin();
      allow create: if true;
      allow update, delete: if isAdmin();
    }
    
    // PROJECT SUGGESTIONS (Proje Başvuruları)
    // Koleksiyon adı: project_suggestions (projeler.html'den yazılır)
    match /project_suggestions/{projectId} {
      allow read: if isAdmin();
      allow create: if true;
      allow update, delete: if isAdmin();
    }

    // Eski isim ile de erişime izin ver (geriye uyumluluk)
    match /project_applications/{projectId} {
      allow read: if isAdmin();
      allow create: if true;
      allow update, delete: if isAdmin();
    }

    // CONTACT MESSAGES (İletişim Mesajları)
    // Koleksiyon adı: contact_messages (iletisim.html'den yazılır)
    match /contact_messages/{messageId} {
      allow read: if isAdmin();
      allow create: if true;
      allow update, delete: if isAdmin();
    }

    // POSTS (Dashboard Akışı & Yorumlar)
    match /posts/{postId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isAdmin() || (isSignedIn() && request.auth.uid == resource.data.author_id);
      
      match /comments/{commentId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn();
        allow update, delete: if isAdmin() || (isSignedIn() && request.auth.uid == resource.data.author_id);
      }
    }
  }
}
